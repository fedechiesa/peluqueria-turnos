<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FrexBarber</title>
    <link rel="icon" type="image/png" href="~/img/favicon.png" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TurnosPeluqueria.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">

                    <img src="~/img/frexlogo.png" alt="FrexBarber" width="40" height="40" class="me-2" />
                    <strong>FrexBarber</strong>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (Context.Session.GetInt32("ClienteId") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">Hola, @Context.Session.GetString("ClienteNombre")</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Cliente" asp-action="MisTurnos">Mis Turnos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Cliente" asp-action="SeleccionarPeluquero">Reservar Turno</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Auth" asp-action="Logout">🚪 Cerrar sesión</a>
                            </li>
                        }
                        else if (Context.Session.GetInt32("PeluqueroId") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">Hola, @Context.Session.GetString("PeluqueroNombre") ✂️</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Turnos" asp-action="MisTurnosPeluquero">Mis Turnos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Auth" asp-action="Logout">Salir</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Registro">Registrarse</a>
                            </li>
                        }

                                        

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FrexBarber - <a asp-area="" asp-controller="Turnos" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
