@model List<TurnosPeluqueria.Models.Turno>

@{
    ViewData["Title"] = "Reservar Turno";
    var peluqueroNombre = ViewBag.PeluqueroNombre as string ?? "Peluquero";
}

<h2>Turnos disponibles para @peluqueroNombre</h2>

@if (!Model.Any())
{
    <p>No hay turnos disponibles.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Servicio</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var turno in Model)
            {
                <tr>
                    <td>@turno.FechaHora.ToString("dd/MM/yyyy")</td>
                    <td>@turno.FechaHora.ToString("HH:mm")</td>
                    <td>@turno.Servicio?.Nombre</td>
                    <td>
                        <form asp-action="ConfirmarTurno" asp-controller="Cliente" method="post">
                            <input type="hidden" name="turnoId" value="@turno.Id" />
                            <button type="submit" class="btn btn-primary">Reservar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
