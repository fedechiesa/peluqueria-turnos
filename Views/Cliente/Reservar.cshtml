@model TurnosPeluqueria.Models.Turno

@{
    ViewData["Title"] = "Reservar Turno";
}

<h2>Reservar Turno</h2>

<form asp-action="Reservar" method="post">
    <div class="form-group">
        <label asp-for="FechaHora" class="control-label"></label>
        <input asp-for="FechaHora" class="form-control" type="datetime-local" />
        <span asp-validation-for="FechaHora" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PeluqueroId" class="control-label">Peluquero</label>
        <select asp-for="PeluqueroId" class="form-control" asp-items="ViewBag.PeluqueroId"></select>
        <span asp-validation-for="PeluqueroId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ServicioId" class="control-label">Servicio</label>
        <select asp-for="ServicioId" class="form-control" asp-items="ViewBag.ServicioId"></select>
        <span asp-validation-for="ServicioId" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Confirmar Turno</button>
</form>
