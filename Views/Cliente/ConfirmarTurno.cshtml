@{
    ViewData["Title"] = "Confirmar Turno";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Confirmá tu turno</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">

                    <form asp-action="GuardarTurno" method="post">
                        <div class="mb-3">
                            <label class="form-label">Peluquero</label>
                            <input type="text" name="peluquero" class="form-control" value="@ViewBag.Peluquero" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Horario</label>
                            <input type="text" name="hora" class="form-control" value="@ViewBag.Hora" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Servicio</label>
                            <select name="servicioId" class="form-select" required>
                                <option value="">-- Seleccioná un servicio --</option>
                                @foreach (var servicio in ViewBag.Servicios as SelectList)
                                {
                                    <option value="@servicio.Value">@servicio.Text</option>
                                }
                            </select>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success">Confirmar Turno</button>
                            <a href="@Url.Action("SeleccionarPeluquero", "Cliente")" class="btn btn-secondary ms-2">Cancelar</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>



