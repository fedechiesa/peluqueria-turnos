@{
    ViewData["Title"] = "Confirmar Turno";
}

<h2>Confirmar Turno</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Peluquero: @ViewBag.Peluquero</h5>
        <p class="card-text">Horario seleccionado: @ViewBag.Hora</p>

        <form asp-action="GuardarTurno" method="post">
            <input type="hidden" name="peluquero" value="@ViewBag.Peluquero" />
            <input type="hidden" name="hora" value="@ViewBag.Hora" />

            <div class="mb-3">
                <label for="servicioId" class="form-label">Servicio</label>
                <select class="form-select" name="servicioId" required>
                    <option value="">-- Seleccioná un servicio --</option>
                    @foreach (var servicio in (SelectList)ViewBag.Servicios)
                    {
                        <option value="@servicio.Value">@servicio.Text</option>
                    }
                </select>
            </div>

            <button type="submit" class="btn btn-success">Confirmar Turno</button>
        </form>
    </div>
</div>

