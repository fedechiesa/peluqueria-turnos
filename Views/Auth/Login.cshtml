@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow rounded-4 border-0">
                <div class="card-body p-4 bg-light">
                    <h2 class="text-center mb-4">Iniciar Sesión</h2>

                    @if (TempData["Error"] != null)
                    {
                        <div id="errorMensaje" class="alert alert-danger text-center fade show" role="alert">
                            ⚠️ @TempData["Error"]
                        </div>
                    }

                    @if (TempData["Exito"] != null)
                    {
                        <div id="exitoMensaje" class="alert alert-success text-center fade show" role="alert">
                            ✅ @TempData["Exito"]
                        </div>
                    }


                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input name="email" id="email" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label for="contraseña" class="form-label">Contraseña</label>
                            <input name="contraseña" id="contraseña" type="password" class="form-control" required />
                        </div>

                        <button type="submit" class="btn btn-dark w-100">Ingresar</button>
                    </form>

                    @section Scripts {
                        <script>
                            // Desaparecer mensajes automáticamente después de 4 segundos
                            setTimeout(() => {
                                const error = document.getElementById("errorMensaje");
                                if (error) {
                                    error.classList.remove("show");
                                    error.classList.add("fade");
                                    setTimeout(() => error.remove(), 300);
                                }

                                const exito = document.getElementById("exitoMensaje");
                                if (exito) {
                                    exito.classList.remove("show");
                                    exito.classList.add("fade");
                                    setTimeout(() => exito.remove(), 300);
                                }
                            }, 4000);
                        </script>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

